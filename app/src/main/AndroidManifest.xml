<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.flashcardapplication">

    <application
        android:allowBackup="true"
        android:icon="@drawable/amrita_logo"
        android:label="FlashLearn"
        android:roundIcon="@drawable/amrita_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <!-- Add android:exported="true" to the main activity with an intent filter -->
        <activity android:name=".FlashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".HomeScreenActivity" android:exported="false" />
        <activity android:name=".FlashcardEditActivity" android:exported="false" />
        <activity android:name=".FlashcardViewActivity" android:exported="false" />

    </application>
</manifest>
